<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_Bmp"
                android:background="@drawable/comper_card"
                android:layout_width="216px"
                android:layout_height="259px"
                android:layout_marginTop="100px"
                />


            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="李莉"
                android:textColor="#161616"
                android:textSize="64px" />

            <View
                android:layout_width="365px"
                android:layout_height="4px"
                android:layout_marginTop="20px"
                android:background="#161616" />

            <LinearLayout
                android:layout_width="365px"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="#161616"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:text="出生日期"
                    android:textColor="#161616"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="365px"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">

                <TextView
                    android:id="@+id/card_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="#161616"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/card_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:text="1988-10-31"
                    android:textColor="#161616"
                    android:textSize="45px" />

            </LinearLayout>

            <View
                android:layout_width="365px"
                android:layout_height="4px"
                android:layout_marginTop="20px"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="365px"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/card_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="湖南省株洲"
                    android:textColor="#161616"
                    android:textSize="36px" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/face_bgColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0080ff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView                
                android:paddingTop="5px"
                android:paddingBottom="5px"
                android:id="@+id/face_bmp"
                
                android:layout_width="173px"
                android:layout_height="196px"
                android:layout_marginTop="125px"
                />

            <TextView
                android:id="@+id/face_text_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:text="验证成功"
                android:textColor="#ffffff"
                android:textSize="64px" />

            <TextView
                android:id="@+id/face_text_result_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="تەكشۈرۈش مۇۋەپپەقىيەتلىك بولدى!"
                android:textColor="#ffffff"
                android:textSize="24px" />

            <ImageView
                android:id="@+id/comper_icon"
                android:layout_width="130px"
                android:layout_height="130px"
                android:layout_marginTop="25px"
                android:src="@mipmap/success" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
