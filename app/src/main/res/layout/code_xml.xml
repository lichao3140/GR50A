<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0080ff">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="欢迎"
                    android:textColor="#2490fe"
                    android:textSize="110px" />

                <ImageView
                    android:id="@+id/code_bmp"
                    android:layout_width="345px"
                    android:layout_height="345px"
                     />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="使用"
                    android:textColor="#2490fe"
                    android:textSize="110px" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/code_showMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:text="无牌车清扫二维码!"
                android:textColor="#161616"
                android:textSize="64px" />

            <TextView
                android:id="@+id/code_showMsg_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px"
                android:text="ماركىلىق ماشىنا تازىلاش ئىككى ئۆلچەملىك كودى يوق ."
                android:textColor="#424242"
                android:textSize="24px" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
